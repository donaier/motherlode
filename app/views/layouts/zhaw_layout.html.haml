!!!

%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title (╯°□°)╯︵ ┻━┻
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'

    %meta{ id: "meta", name: "viewport", content: "initial-scale=1.0" }
    %meta{ name: "apple-mobile-web-app-capable", content: "yes" }
    %meta{ name: "apple-mobile-web-app-status-bar-style", content: "black" }
    %link{ href: asset_path("icon.png"), rel: "apple-touch-icon" }

    %link{ rel: "stylesheet", type: "text/css", href: "//fonts.googleapis.com/css?family=Ubuntu" }

  %body.zhaw
    = render 'partials/zhaw_header'
    = yield

    .spacer
    %section.footer
      %span
        = "made by #{ link_to 'donat', 'https://www.instagram.com/d0naier/', target: '_blank' }".html_safe
      = image_tag 'logo.png', class: 'tiny'
      %span
        = "hosted on #{ link_to 'heroku', 'http://www.heroku.com/', target: '_blank' }".html_safe
      = image_tag 'logo.png', class: 'tiny'
      %span
        = "open #{ link_to 'source', 'http://github.com/donaier/motherlode', target: '_blank' }".html_safe

  = render 'partials/ga'
  = render 'partials/click_suppressor'
