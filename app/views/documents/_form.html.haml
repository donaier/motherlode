= form_for(@document, multipart: true) do |f|
  .field
  = f.label :author
  = f.text_field :author, value: current_user.username, readonly: true
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :modul
    = f.select :modul, Document::MODULI
  .field
    = f.label :description
    = f.text_area :description, rows: 6
  .field
    = f.label :file
    = f.file_field :file
  .actions
    = f.submit 'do it'
